SHELL = /bin/sh

make:
	libtoolize -c --automake --force
	autopoint --force
	aclocal --force -I m4
	autoheader --force
	automake --add-missing --force-missing
	autoconf --force
	@echo ""
	@echo "You may now run ./configure"
	@echo ""

